    <script>
      // Form validation
      function js() {
        "use strict";
      }

      const form = document.getElementById("contact-form");

      form.addEventListener("submit", function (event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        } else {
          event.preventDefault();
          document;
        }
      });
    </script>
